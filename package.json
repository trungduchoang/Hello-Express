{
  "name": "typescript-express-docker",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "start": "node dist/app.js",
    "build": "ts-node --project ./tsconfig.json",
    "bit:import": "bit import --skip-npm-install --ignore-package-json -m manual",
    "bit:clone": "rm -rf shared && bit import --skip-npm-install --ignore-package-json  rteam.shared/*",
    "postinstall": "yarn run bit:clone"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "~5.13.3"
  },
  "devDependencies": {
    "@types/node": "^16.4.4",
    "typescript": "^4.3.5"
  }
}
